    <build>
        <plugins>
        <plugin>
            <groupId>org.jacoco</groupId>
            <artifactId>jacoco-maven-plugin</artifactId>
            <version>0.8.10</version>  <!-- Usa a versÃ£o mais recente -->
            <executions>
                <execution>
                    <id>prepare-agent</id>
